
import React, { useState } from 'react';
import { View, TextInput, Button, Image, StyleSheet } from 'react-native';

const AIGenerator = () => {
  const [description, setDescription] = useState('');
  const [generatedDesign, setGeneratedDesign] = useState(null);

  const generateDesign = async () => {
    // Placeholder function to simulate AI generation
    const generatedUrl = 'https://via.placeholder.com/300'; // Replace with actual API call
    setGeneratedDesign(generatedUrl);
  };

  return (
    <View style={styles.container}>
      <TextInput
        style={styles.input}
        placeholder="Describe your tattoo..."
        value={description}
        onChangeText={setDescription}
      />
      <Button title="Generate Design" onPress={generateDesign} />
      {generatedDesign && <Image source={{ uri: generatedDesign }} style={styles.image} />}
    </View>
  );
};

const styles = StyleSheet.create({
  container: {
    flex: 1,
    justifyContent: 'center',
    padding: 16,
  },
  input: {
    borderWidth: 1,
    padding: 8,
    marginBottom: 16,
  },
  image: {
    width: 300,
    height: 300,
    marginTop: 16,
  },
});

export default AIGenerator;
